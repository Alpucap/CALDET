<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CALDETWEB</title>
    <script src="js/Home.js"></script>
    <link rel="stylesheet" href="css\Home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="icon" type="image/x-icon" href="/src/CALDET.png">
</head>
<body>
    
    <!-- NAVBAR -->
    <nav>
        <a href="/">Home</a>
        <a href="#count">Count</a>
        <a href="#" onclick="showalerts()">Profile</a>
        <a href="#food">Food</a>
        <a href="#insight">Insight</a>
    </nav>

    <!-- INTROS -->
    <div class="Intro">
        <h1>CALDET</h1>
        <div class="subtext">
            <h2>a site to count <span>calories...</span></h2>
        </div>
    </div>

    <!-- INFINITE -->
    <div class="Infinite">
        <div class="slideshow-container">
            <div class="slide"><a href="/Shop">ECTOMORPH</a></div>
            <div class="slide"><a href="/Shop">MESOMORPH</a></div>
            <div class="slide"><a href="/Shop">ENDOMORPH</a></div>
        </div>
    </div>

    <!-- COUNT -->
    <div class="Count" id="count">
        <h1>Count your calorie needs</h1>
        <form id="calorieForm">
            <div class="form-group">
                <label for="Gender">Gender</label>
                <div class="radio-group">
                    <input type="radio" id="male" name="gender" value="male">
                    <label for="male">Male</label>
                    <input type="radio" id="female" name="gender" value="female">
                    <label for="female">Female</label>
                </div>
            </div>
            <div class="form-group">
                <label for="Age">Age</label>
                <input type="number" id="age" name="age" required>
            </div>
            <div class="form-group">
                <label for="Weight">Weight</label>
                <input type="number" id="weight" name="weight" required>
            </div>
            <div class="form-group">
                <label for="Height">Height</label>
                <input type="number" id="height" name="height" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit BMR" name="submitbmr">
            </div>
        </form>
        <div id="result"></div>
    </div>

    <!-- FOOD -->
    <div class="Food" id="food">
        <h1>How many calories in your food?</h1>
        <div class="search-container">
            <input type="text" id="searchInput" placeholder="Search for food...">
        </div>
        <div class="FoodList" id="foodList">
            <!-- Data makanan akan dirender di sini -->
        </div>
    </div>

    <!-- INSIGHT -->
    <!-- Rating the recipe -->
    <%- include('layout/rating.ejs') %>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <div class="footer-section">
                <h3>Contact Us</h3>
                <p>Email: caldet@gmail.com</p>
                <p>Phone: +123 456 7890</p>
            </div>
            <div class="footer-section">
                <h3>Quick Section</h3>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="#count">Count</a></li>
                    <li><a href="#food">Food</a></li>
                    <li><a href="#insight">Insight</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Follow Us</h3>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="script.js"></script>
</body>
</html>